# ============================================================================
# 必須設定
# ============================================================================

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API
CLAUDE_API_KEY=your_claude_api_key_here

# ============================================================================
# オプショナル設定（ローカル動作時は不要）
# ============================================================================

# Supabase (本番環境で使用する場合のみ設定)
# ローカル環境ではJSONベースのデータベースを使用するため不要
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_KEY=

# ============================================================================
# Gemini モデル設定
# ============================================================================

# Gemini 3.0使用フラグ
# true = Gemini 3.0 Pro (課金必要、高精度OCR/翻訳)
# false = Gemini 2.5 Pro/Flash (無料枠あり、開発推奨)
USE_GEMINI_3=false

# Gemini 2.5 モデル名（デフォルト、通常は変更不要）
GEMINI_2_5_OCR_MODEL=gemini-2.5-pro
GEMINI_2_5_TRANSLATE_MODEL=gemini-2.5-flash

# Gemini 3.0 モデル名（デフォルト、通常は変更不要）
GEMINI_3_OCR_MODEL=gemini-3-pro-preview
GEMINI_3_TRANSLATE_MODEL=gemini-3-pro-preview

# ============================================================================
# バックエンド設定
# ============================================================================

# Backend Server
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# CORS - カンマ区切りで複数のオリジンを許可
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads
